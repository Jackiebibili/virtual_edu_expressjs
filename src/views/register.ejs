<div class='container'>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div id="div" class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h1>
        <%- include('partials/messages'); %> 
        <form id="infoform" name="infoform" action="/users/register-" method="POST" enctype="multipart/form-data">
            <div id="fullname_row" class="form-group">
                <label class="col-form-label" id="fullname_label">Full name</label>
                <input type="text"
                        name="fullnametext"
                        size="20"
                        maxlength="55"
                        class="form-control"
                        placeholder="Type your full name here"
                        value="<%= typeof fullnametext != 'undefined' ? fullnametext : '' %>"/>
                <div id="fullnamecheck" class=""></div>
            </div>
            <div id="phone_row" class="form-group">
                <label id="phone_label" class="col-form-label">Phone number</label>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <select name="regioncode" class="form-control" size="1"></select>
                        </div>
                        <input type="text" 
                                name="phonetext" 
                                size="11" 
                                maxlength="11" 
                                class="form-control" 
                                placeholder="Phone number"
                                value="<%= typeof phonetext != 'undefined' ? phonetext : '' %>"/>
                        <div id="phonecheck" class=""></div>
                    </div>
                </div>
            </div>
            <div id="useremail_row" class="form-group">
                <label id="useremail_label" class="col-form-label">Email</label>
                <input type="text"
                        name="useremail"
                        size="20"
                        maxlength="40"
                        class="form-control"
                        placeholder="example@email.com"
                        value="<%= typeof useremail != 'undefined' ? useremail : '' %>"/>
                <div id="useremailcheck" class=""></div>
            </div>
            <div id="usertype_row" class="form-group">
                <label id="usertype_label" class="col-form-label">Register as</label>
                <div class="form-group">
                    <select class="form-control" name="usertypeselection" size="1">
                        <option value="selectanoption" selected="selected">select an option</option>
                        <option value="student">student</option>
                        <option value="instructor">instructor/professor</option>
                    </select>
                    <div id="usertypecheck" class="" ></div>    
                </div>
            </div>
            <div id="username_row" class="form-group">
                <label id="username_label" class="col-form-label">Username</label>
                <input type="text"
                        name="usernametext" 
                        size="20" maxlength="20" 
                        class="form-control" 
                        placeholder="Type your username"
                        value="<%= typeof usernametext != 'undefined' ? usernametext : '' %>"/>
                <div id="usernamecheck" class=""></div>
            </div>
            <div id="userpassword_row" class="form-group">
                <label id="userpassword_label" class="col-form-label">Password</label>
                <div class="form-group">
                    <div class="input-group mb=3">
                        <input type="password" 
                                name="userpassword" 
                                size="20" 
                                maxlength="60"
                                class="form-control" 
                                placeholder="Type your password"
                                value="<%= typeof userpassword != 'undefined' ? userpassword : '' %>"/>
                        <div class="input-group-append">
                            <span id="userpasswordexposespan" class="input-group-text"><img id="userpasswordexposeimg" src="/static/images/showPwBnt.svg" draggable="false" alt="showBtn" width=18 height="18"></span>
                        </div>
                        <div id="userpasswordcheck" class=""></div>
                    </div>
                </div>  
            </div>
            <div id="userpasswordconfirm_row" class="form-group">
                <label id="userpasswordconfirm_label" class="col-form-label">Confirm your password</label>
                <input type="password" 
                        id="userpasswordconfirm" 
                        size="20" 
                        maxlength="60"
                        class="form-control" 
                        placeholder="Retype your password"/>
                <div id="userpasswordconfirmcheck" class=""></div>
            </div>
            <button id="submitbutton" type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
        <script src="/static/javascripts/sign_up_console.js"></script>
      </div>
    </div>
</div>
</div>
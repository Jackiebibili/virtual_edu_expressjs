<div class='container'>
    <div class='container-fluid mt-5'>
        <form id='addscheduleform' name='addscheduleform'>
            <div class='form-group'>
                <div class='row'>
                    <div class='col'>
                        <a href="/instructor/dashboard/" class='btn btn-info btn-sm'>back</a>
                    </div>
                </div>
            </div>
            <div class='form-group mt-2 mb-2'>
                <div class="card border-primary mb-2">
                    <div class="card-header"><i class="mr-2"><img id="extendschedulelistbutton"
                                src="/static/images/extendBarUpBtn.svg" height="20" width="20" draggable="false"
                                alt="cardbodyschedulelistdiv" style="cursor: pointer;"></i>Schedule list</div>
                    <div class="card-body" id="cardbodyschedulelistdiv">
                        <table class='table table-hover'>
                            <thead>
                                <tr>
                                    <th scope='col'>Schedule title</th>
                                    <th scope='col'>Start date</th>
                                    <th scope='col'>End date</th>
                                    <th scope='col'># of sessions</th>
                                    <th scope='col'></th>
                                    <th scope='col'></th>
                                </tr>
                            </thead>
                            <tbody id="selectscheduletablebody">
                                <% if(typeof scheduleList != 'undefined') { %>
                                <% var i = 0; %>
                                <% scheduleList.forEach(function(schedule){ %>
                                <tr>
                                    <td><%= schedule.scheduletitle %></td>
                                    <td><%= list[i][0].getFullYear() + "/" + (list[i][0].getMonth() + 1) + "/" + list[i][0].getDate() %>
                                    </td>
                                    <td><%= list[i][1].getFullYear() + "/" + (list[i][1].getMonth() + 1) + "/" + list[i++][1].getDate() %>
                                    </td>
                                    <td><%= schedule.schedulearray.length %></td>
                                    <td><button class="btn btn-success"
                                            id="view_scheduleid=<%= schedule.id %>">Select</button>
                                    </td>
                                    <td><button class="btn btn-danger"
                                            id="remove_scheduleid=<%= schedule.id %>">Remove</button>
                                    </td>
                                </tr>
                                <% }); %>
                                <% } %>
                            </tbody>
                        </table>
                        <div class='form-group hideRow' id='scheduleactiondiv'>
                            <div class="row">
                                <div class='col'>
                                    <button id='addsingletimeslotbutton' class='btn btn-info btn-block'>Add a single
                                        schedule
                                        slot</button>
                                </div>
                                <div class='col'>
                                    <button id='viewselectedschedulebutton' class='btn btn-warning btn-block'>View/edit
                                        the selected
                                        schedule</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class='form-group hideRow' id='scheduleviewmessage'>
                <div class="row">
                    <div class='col'>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <button id="schedulemessageclosebutton" type="button" class="close" data-dismiss="alert"
                                aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class='form-group hideRow' id='addsingletimeslotdiv'>
                <div class='row'>
                    <div class='col-sm-4'>
                        <label for='addsingletimeslotinputdate'>Select a date:</label>
                        <input type="date" id='addsingletimeslotinputdate' class='form-control'>
                    </div>
                    <div class='col-sm'>
                        <label for='addsingletimeslotselectstarttime'>Select the starting time:</label>
                        <select id='addsingletimeslotselectstarttime' class='form-control'>
                        </select>
                    </div>
                    <div class='col-sm'>
                        <label for='addsingletimeslotselectendtime'>Select the ending time:</label>
                        <select id='addsingletimeslotselectendtime' class='form-control'>
                        </select>
                    </div>
                    <div class='col-sm-2'>
                        <label for='addsingletimeslotvalidatebutton'>Confirm:</label>
                        <button id='addsingletimeslotvalidatebutton'
                            class='btn btn-success form-control'>Validate</button>
                    </div>
                </div>
            </div>
            <div class='form-group mt-4 mb-4 hideRow' id="scheduleinfodiv">
                <div class="card border-warning mb-3">
                    <div class="card-header"><i class="mr-2"><img id="extendscheduleinfobutton"
                                src="/static/images/extendBarDownBtn.svg" height="20" width="20" draggable="false"
                                alt="cardbodyscheduleinfodiv" style="cursor: pointer;"></i>Schedule info</div>
                    <div class="card-body" id="cardbodyscheduleinfodiv">
                        <div class="row">
                            <label for='scheduletitle'>Schedule title:</label>
                            <input class='form-control' id='scheduletitle' name='scheduletitle'>
                        </div>
                        <div class="row">
                            <label for='scheduledescription'>Schedule description:</label>
                            <textarea class="form-control" id="scheduledescription" name='scheduledescription'
                                rows="4"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class='form-group mt-4 mb-4 hideRow' id="scheduletablelogdiv">
                <div class="card border-danger mb-3">
                    <div class="card-header"><i class="mr-2"><img id="extendscheduletablelogbutton"
                                src="/static/images/extendBarDownBtn.svg" height="20" width="20" draggable="false"
                                alt="cardbodyscheduletablelogdiv" style="cursor: pointer;"></i>Schedule
                        logs</div>
                    <div class="card-body hideRow" id="cardbodyscheduletablelogdiv">
                        <h4 id="scheduletablelogh4" class="card-title">
                            <div class="row">
                                <ul class="nav nav-pills" id="navfilter">
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#">All</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Sunday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Monday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Tuesday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Wednesday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Thursday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Friday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Saturday</a>
                                    </li>
                                </ul>
                            </div>
                        </h4>
                        <div class="row">
                            <table class='table tablefixed'>
                                <thead>
                                    <tr>
                                        <th scope="col">Date</th>
                                        <th scope="col">Day</th>
                                        <th scope="col">Time</th>
                                        <th scope="col">Duration</th>
                                        <th scope="col">Type</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="schedulelogbody">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class='form-group mt-4 mb-5 hideRow' id="scheduletablediv">
                <div class="card border-dark mb-3">
                    <div class="card-header"><i class="mr-2"><img id="extendscheduletablebutton"
                                src="/static/images/extendBarUpBtn.svg" height="20" width="20" draggable="false"
                                alt="scheduletablecardbodydiv" style="cursor: pointer;"></i>Calendar
                    </div>
                    <div class="card-body" id="scheduletablecardbodydiv">
                        <table class='table table-striped tablefixed'>
                            <thead>
                                <tr>
                                    <th scope="col" class="thcss">week\day</th>
                                    <th scope="col" class="tdcss">SUN</th>
                                    <th scope="col" class="tdcss">MON</th>
                                    <th scope="col" class="tdcss">TUE</th>
                                    <th scope="col" class="tdcss">WED</th>
                                    <th scope="col" class="tdcss">THU</th>
                                    <th scope="col" class="tdcss">FRI</th>
                                    <th scope="col" class="tdcss">SAT</th>
                                </tr>
                            </thead>
                            <tbody id='scheduletablebody'>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class='form-group hideRow' id='scheduleupdatebuttondiv'>
                <div class='row'>
                    <div class='col-sm'>
                        <button id='updateschedulebutton' name='updateschedulebutton'
                            class='btn btn-success btn-blcok form-control'>Update schedule</button>
                    </div>
                </div>
            </div>

        </form>
        <script>

        </script>
        <script src='/static/javascripts/viewSchedule_instructor.js'></script>
    </div>
</div>
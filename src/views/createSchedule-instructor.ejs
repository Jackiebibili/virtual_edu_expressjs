<div class='container'>
    <div class='container-fluid mt-5'>
        <form id='addscheduleform' name='addscheduleform'>
            <div class='form-group mb-2'>
                <div class='row'>
                    <div class='col'>
                        <a href="/instructor/dashboard/" class='btn btn-info btn-sm'>back</a>
                    </div>
                </div>
            </div>
            <div class='form-group mt-2 mb-2'>
                <div class="card border-success mb-3">
                    <div class="card-header"><i class="mr-2"><img id="extendscheduleconfigbutton"
                                src="/static/images/extendBarUpBtn.svg" height="20" width="20" draggable="false"
                                alt="cardbodyscheduleconfigdiv" style="cursor: pointer;"></i>Configure a schedule</div>
                    <div class="card-body" id="cardbodyscheduleconfigdiv">
                        <div class='row'>
                            <div class='col-sm-9'>
                                <label for='scheduletitle'>Schedule title:</label>
                                <input type='text' id='scheduletitle' name='scheduletitle' class='form-control'>
                            </div>
                            <div class='col-sm-3'>
                                <label for='validatebutton'>Click to validate:</label>
                                <button name='validatebutton' id='validatebutton'
                                    class='btn btn-danger form-control'>Validate</button>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col-sm-5'>
                                <label for='classstartday'>Your schedule will start on:</label>
                                <input type="date" id='classstartday' name='classstartday' class='form-control'>
                            </div>
                            <div class='col-sm-5'>
                                <label for='classendday'> and end on:</label>
                                <input type='date' id='classendday' name='classendday' class='form-control'>
                            </div>
                            <div class='col-sm-2'>
                                <label for='classoverallduration'>lasts:</label>
                                <input id='classoverallduration' class='form-control' disabled="">
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col-sm-5'>
                                <label for='instructordayschedulestartsat'>Your daily schedule will start at:</label>
                                <select id='instructordayschedulestartsat' class='form-control'>
                                </select>
                            </div>
                            <div class='col-sm-5'>
                                <label for='instructordayscheduleendsat'>and end at:</label>
                                <select id='instructordayscheduleendsat' class='form-control'>
                                </select>
                            </div>
                            <div class='col-sm-2'>
                                <label for='scheduledurationinhours'>lasts:</label>
                                <input id='scheduledurationinhours' class='form-control' disabled="">
                            </div>
                        </div>
                        <div class='row mb-2'>
                            <div class='col-sm-3'>
                                <label for="classdayschedule">Class days on:</label>
                                <select multiple="" class="form-control" id="classdayschedule" name='classdayschedule'>
                                    <option value='0'>Sunday</option>
                                    <option value='1'>Monday</option>
                                    <option value='2'>Tuesday</option>
                                    <option value='3'>Wednesday</option>
                                    <option value='4'>Thursday</option>
                                    <option value='5'>Friday</option>
                                    <option value='6'>Saturday</option>
                                </select>
                            </div>
                            <div class='col-sm-9'>
                                <label for="scheduledescription">Schedule description:</label>
                                <textarea class="form-control" id="scheduledescription" name='scheduledescription'
                                    rows="4"></textarea>
                            </div>
                        </div>
                        <div class='row mt-2'>
                            <div class='col-sm'>
                                <button id='generateschedulebutton' name='generateschedulebutton'
                                    class='btn btn-success btn-blcok form-control'>Generate schedule</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class='form-group mt-2 mb-2 hideRow' id="scheduletablelogdiv">
                <div class="card border-danger mb-3">
                    <div class="card-header"><i class="mr-2"><img id="extendscheduletablelogbutton"
                                src="/static/images/extendBarDownBtn.svg" height="20" width="20" draggable="false"
                                alt="cardbodyscheduletablelogdiv" style="cursor: pointer;"></i>Schedule
                        logs</div>
                    <div class="card-body hideRow" id="cardbodyscheduletablelogdiv">
                        <h4 id="scheduletablelogh4" class="card-title">
                            <div class="row">
                                <ul class="nav nav-pills" id="navfilter">
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#">All</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Sunday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Monday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Tuesday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Wednesday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Thursday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Friday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Saturday</a>
                                    </li>
                                </ul>
                            </div>
                        </h4>
                        <div class="row">
                            <table class='table tablefixed'>
                                <thead>
                                    <tr>
                                        <th scope="col">Date</th>
                                        <th scope="col">Day</th>
                                        <th scope="col">Time</th>
                                        <th scope="col">Duration</th>
                                        <th scope="col">Type</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="schedulelogbody">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class='form-group mt-2 mb-5 hideRow' id="scheduletablediv">
                <div class="card border-dark mb-3">
                    <div class="card-header"><i class="mr-2"><img id="extendscheduletablebutton"
                                src="/static/images/extendBarUpBtn.svg" height="20" width="20" draggable="false"
                                alt="scheduletablecardbodydiv" style="cursor: pointer;"></i>Calendar
                    </div>
                    <div class="card-body" id="scheduletablecardbodydiv">
                        <table class='table table-striped tablefixed'>
                            <thead>
                                <tr>
                                    <th scope="col" class="thcss">week\day</th>
                                    <th scope="col" class="tdcss">SUN</th>
                                    <th scope="col" class="tdcss">MON</th>
                                    <th scope="col" class="tdcss">TUE</th>
                                    <th scope="col" class="tdcss">WED</th>
                                    <th scope="col" class="tdcss">THU</th>
                                    <th scope="col" class="tdcss">FRI</th>
                                    <th scope="col" class="tdcss">SAT</th>
                                </tr>
                            </thead>
                            <tbody id='scheduletablebody'>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
        <script src='/static/javascripts/createSchedule_instructor.js'></script>
    </div>
</div>